import tkinter as tk

window = tk.Tk()
calculatorbox = tk.Label(
    width="50",
    height="50"
)

for i in range(4):
    window.columnconfigure(i, weight=1, minsize=100)
    window.rowconfigure(i, weight=1, minsize=100)

    for j in range(4):
            frame = tk.Frame(
                master=window,
                relief=tk.RAISED,
                borderwidth = 1
            )
            frame.grid(row = i, column = j, padx=5, pady=5)
            label = tk.Label(master=frame, text=f"{i},{j}")
            label.pack(padx=5, pady=5)

            buttons = tk.Button(
                 relief=tk.RAISED,
                 master=window,
                 borderwidth=1
            )


x = int(input(""))
y = int(input(""))
addition = x + y
subtraction = x - y
multiplication = x * y
division = x / y

operator = input("addition, subtraction, multiplication, or division?")

if operator == "addition":
    print(addition)
else:
    if operator == "subtraction":
        print(subtraction)
    else:
        if operator == "multiplication":
            print(multiplication)
        else:
            print(division)

calculatorbox.pack()
window.mainloop()


